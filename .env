# Container IP Addresses
IP_FREEIPA=172.20.0.10
IP_INTERMEDIATE_CA=172.20.0.11
IP_ROOT_CA=172.20.0.12
IP_IOT_CA=172.20.0.13
IP_DS_ROOT=172.20.0.14
IP_DS_INTERMEDIATE=172.20.0.15
IP_DS_IOT=172.20.0.16
