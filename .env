# ============================================================================
# ECC PKI Configuration (ECDSA P-384)
# ============================================================================
ECC_CA_KEY_ALGORITHM=SHA384withEC
ECC_CA_KEY_SIZE=nistp384
ECC_CA_KEY_TYPE=ecc
ECC_SECURITY_DOMAIN_NAME=CERT-LAB-ECC

# ECC Certificate Subjects
ECC_ROOT_CA_SUBJECT=CN=Root CA (ECC P-384),O=Cert-Lab,C=US
ECC_INTERMEDIATE_CA_SUBJECT=CN=Intermediate CA (ECC P-384),O=Cert-Lab,C=US
ECC_IOT_CA_SUBJECT=CN=IoT Sub-CA (ECC P-384),O=Cert-Lab,C=US

# ECC PKI Instance Names
ECC_PKI_INSTANCE_ROOT=pki-ecc-root-ca
ECC_PKI_INSTANCE_INTERMEDIATE=pki-ecc-intermediate-ca
ECC_PKI_INSTANCE_IOT=pki-ecc-iot-ca

# ECC Directory Servers
DS_ECC_ROOT_HOST=ds-ecc-root.cert-lab.local
DS_ECC_INTERMEDIATE_HOST=ds-ecc-intermediate.cert-lab.local
DS_ECC_IOT_HOST=ds-ecc-iot.cert-lab.local

# ECC Container IP Addresses (172.28.0.0/24)
IP_ECC_DS_ROOT=172.28.0.14
IP_ECC_DS_INTERMEDIATE=172.28.0.15
IP_ECC_DS_IOT=172.28.0.16
