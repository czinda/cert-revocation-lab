PQ_IOT_CA_SUBJECT=CN=IoT Sub-CA (ML-DSA-87),O=Cert-Lab,C=US

# PQ PKI Instance Names
PQ_PKI_INSTANCE_ROOT=pki-pq-root-ca
PQ_PKI_INSTANCE_INTERMEDIATE=pki-pq-intermediate-ca
PQ_PKI_INSTANCE_IOT=pki-pq-iot-ca

# PQ Directory Servers
DS_PQ_ROOT_HOST=ds-pq-root.cert-lab.local
DS_PQ_INTERMEDIATE_HOST=ds-pq-intermediate.cert-lab.local
DS_PQ_IOT_HOST=ds-pq-iot.cert-lab.local

