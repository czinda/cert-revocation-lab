# RSA PKI Subject DNs
ROOT_CA_SUBJECT=CN=Root CA (RSA-4096),O=Cert-Lab,C=US
INTERMEDIATE_CA_SUBJECT=CN=Intermediate CA (RSA-4096),O=Cert-Lab,C=US
IOT_CA_SUBJECT=CN=IoT Sub-CA (RSA-4096),O=Cert-Lab,C=US
