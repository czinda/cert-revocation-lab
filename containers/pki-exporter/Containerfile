# PKI Metrics Exporter for Prometheus
# Scrapes Dogtag PKI CAs and exports metrics in Prometheus format

FROM quay.io/hummingbird/python:3.12-builder

# Switch to root for setup
USER 0

WORKDIR /app

# Install openssl for OCSP probing and gcc for C extensions (pydantic-core)
RUN dnf install -y openssl gcc python3-devel && dnf clean all

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application
COPY app.py .

# Switch to non-root user
USER 65532

# Expose metrics port
EXPOSE 9091

# Health check
HEALTHCHECK --interval=15s --timeout=10s --start-period=15s --retries=3 \
    CMD python -c "import httpx; httpx.get('http://localhost:9091/health', timeout=5)" || exit 1

# Run the application
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "9091"]
