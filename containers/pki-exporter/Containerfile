# PKI Metrics Exporter for Prometheus
# Scrapes Dogtag PKI CAs and exports metrics in Prometheus format

FROM python:3.11-slim

WORKDIR /app

# Install openssl for OCSP probing
RUN apt-get update && apt-get install -y --no-install-recommends openssl && \
    rm -rf /var/lib/apt/lists/*

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application
COPY app.py .

# Expose metrics port
EXPOSE 9091

# Health check
HEALTHCHECK --interval=15s --timeout=10s --start-period=15s --retries=3 \
    CMD python -c "import httpx; httpx.get('http://localhost:9091/health', timeout=5)" || exit 1

# Run the application
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "9091"]
