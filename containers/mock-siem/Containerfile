# Mock SIEM Container
# FastAPI application simulating Security Information and Event Management

FROM quay.io/hummingbird/python:3.12-builder

LABEL maintainer="cert-revocation-lab"
LABEL description="Mock SIEM service for security event correlation"

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app

# Switch to root for setup
USER 0

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application
COPY app.py .

# Switch to non-root user
USER 65532

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=10s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8000/health')" || exit 1

# Run application
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8000"]
